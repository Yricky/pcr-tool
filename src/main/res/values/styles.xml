<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
    </style>

    <style name="ExpandedTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorAlpha</item>
    </style>

    <style name="subTitleWithe" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- 点击波浪-->
    <style name="Ripple">
        <item name="android:colorControlHighlight">@color/colorFg</item>
        <item name="android:radius">18dp</item>
    </style>

    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <!--menu items 间隔设置-->
    <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:padding">0dp</item>
    </style>
</resources>
