<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/s_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/skill_icon"
        android:layout_width="@dimen/xl_icon"
        android:layout_height="@dimen/xl_icon"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/skill_0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/skill_icon_x"
        android:layout_width="@dimen/l_icon"
        android:layout_height="@dimen/l_icon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cancel"
        app:layout_constraintBottom_toBottomOf="@+id/skill_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/skill_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/s_margin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skill_icon"
        tools:text="技能1" />
</androidx.constraintlayout.widget.ConstraintLayout>