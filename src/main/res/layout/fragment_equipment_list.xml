<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/fragment_main_pager_scene">

    <View
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/tool_bar"
        layout="@layout/view_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pager_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_back_drop"
        android:padding="@dimen/xs_padding"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintVertical_weight="1"
        app:spanCount="4"
        tools:listitem="@layout/item_common" />

    <LinearLayout
        android:id="@+id/layout_fab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_toolbar_height"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/equip_count"
            android:layout_width="@dimen/fab_text_2"
            android:layout_height="@dimen/fab_size"
            android:layout_marginEnd="@dimen/xl_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/tool_equip"
            android:elevation="@dimen/home_fab_elevation"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:elevation="@dimen/home_fab_elevation"
            app:icon="@drawable/ic_equip"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />
    </LinearLayout>
</androidx.constraintlayout.motion.widget.MotionLayout>
