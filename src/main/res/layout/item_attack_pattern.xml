<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/s_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/skill_icon"
        android:layout_width="@dimen/xl_icon"
        android:layout_height="@dimen/xl_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/skill_0" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/skill_no"
        android:layout_width="@dimen/xl_icon"
        android:layout_height="@dimen/xl_icon"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/skill_icon"
        app:layout_constraintTop_toTopOf="@+id/skill_icon"
        android:text="普攻" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/skill_order"
        android:layout_width="@dimen/xl_icon"
        android:layout_height="@dimen/xl_icon"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:text="1" />
</androidx.constraintlayout.widget.ConstraintLayout>