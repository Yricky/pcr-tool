<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.character.CharacterRankCompareFragment">

    <include
        android:id="@+id/rank_btns_0"
        layout="@layout/layout_rank_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/rank_btns_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/rank_btns_1"
        layout="@layout/layout_rank_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rank_btns_0"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rank_btns_0"
        tools:itemCount="5"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@id/rank_1"
        tools:listitem="@layout/item_character_attr" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@+id/rank_compare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rank_0"
        app:layout_constraintTop_toBottomOf="@id/rank_btns_0"
        app:layout_constraintWidth_percent="0.5"
        tools:itemCount="5"
        tools:listitem="@layout/item_character_attr" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_compare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rank_1"
        app:layout_constraintTop_toBottomOf="@id/rank_btns_0"
        app:layout_constraintWidth_percent="0.5"
        tools:itemCount="5"
        tools:listitem="@layout/item_character_attr" />

</androidx.constraintlayout.widget.ConstraintLayout>