<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.character.CharacterRankCompareFragment">

    <include
        android:id="@+id/rank_btns_0"
        layout="@layout/layout_rank_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/rank_btns_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/rank_btns_1"
        layout="@layout/layout_rank_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rank_btns_0"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rank_compare_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_margin"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toBottomOf="@id/rank_btns_0"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginEnd="@dimen/xs_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="780" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/xs_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="780" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/value_compare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/xs_margin"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="780" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rank_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:layout_margin="@dimen/m_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rank_compare_title"
        tools:itemCount="5"
        tools:listitem="@layout/item_rank_compare_attr" />


</androidx.constraintlayout.widget.ConstraintLayout>