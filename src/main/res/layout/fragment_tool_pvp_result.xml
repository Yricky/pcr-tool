<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/card_height">

    <include
        android:id="@+id/pvp_result_toolbar"
        layout="@layout/view_toolbar"
        tools:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pvp_result_toolbar"
        tools:context=".ui.tool.pvp.ToolPvpResultDialogFragment"
        tools:itemCount="3"
        tools:listitem="@layout/item_pvp_result" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pvp_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pvp_no_data"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvp_result_toolbar" />

    <ProgressBar
        android:id="@+id/pvp_result_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/l_icon"
        android:layout_height="@dimen/l_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvp_result_toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>
