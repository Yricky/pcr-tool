<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:minHeight="@dimen/card_height">

    <include
        android:id="@+id/pvp_result_toolbar"
        layout="@layout/view_toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pvp_result_toolbar"
        tools:context=".ui.tool.pvp.ToolPvpResultDialogFragment"
        tools:itemCount="3"
        tools:listitem="@layout/item_pvp_result" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pvp_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pvp_no_data"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvp_result_toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/loading_dialog"
        android:layout_width="@dimen/loading_dialog_width"
        android:layout_height="@dimen/loading_dialog_height"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pvp_result_toolbar">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/l_icon"
            android:layout_height="@dimen/l_icon"
            android:layout_gravity="center" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/s_margin"
            android:text="查询中，请等待..."
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/colorAccent" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
