<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/s_padding">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sort_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintBottom_toTopOf="@+id/sort_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sort_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_height"
        app:layout_constraintBottom_toTopOf="@+id/sort_weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_age" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sort_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_weight"
        app:layout_constraintBottom_toTopOf="@+id/sort_position"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_height" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/sort_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_position"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sort_weight" />
</androidx.constraintlayout.widget.ConstraintLayout>