<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_color"
    tools:context=".ui.tool.pvp.PvpLikedFragment">

    <include
        android:id="@+id/tool_pvp_like"
        layout="@layout/view_toolbar" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/pvp_like_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xm_margin"
        android:layout_marginEnd="@dimen/xm_margin"
        app:checkedChip="@id/pvp_all"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/pvp_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tab_all"
            style="@style/Widget.MaterialComponents.Chip.Choice" />


        <com.google.android.material.chip.Chip
            android:id="@+id/pvp_cus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customize"
            style="@style/Widget.MaterialComponents.Chip.Choice" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_liked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/xm_margin"
        android:layout_marginEnd="@dimen/xm_margin"
        android:orientation="vertical"
        tools:itemCount="4"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_pvp_liked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/efab_margin"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/xm_margin"
            android:layout_marginBottom="@dimen/efab_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/back_top"
            android:text="@string/back_top"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_top"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="@dimen/fab_text_2"
            android:layout_height="@dimen/fab_size"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/xl_margin"
            android:layout_marginBottom="@dimen/efab_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/add"
            android:text="@string/add"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_add"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>