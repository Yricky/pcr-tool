<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    app:layoutDescription="@xml/fragment_tool_pvp_liked_scene"
    tools:context=".ui.tool.pvp.PvpLikedFragment">

    <include
        android:id="@+id/tool_pvp_like"
        layout="@layout/view_toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/like_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="@dimen/xm_padding"
        android:paddingTop="@dimen/s_padding"
        android:paddingEnd="@dimen/xm_padding"
        android:paddingBottom="@dimen/s_padding"
        android:text="@string/no_liked_data"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/tool_pvp_like" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_liked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_back_drop"
        android:orientation="vertical"
        android:paddingTop="@dimen/m_padding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/like_tip"
        tools:itemCount="5"
        tools:listitem="@layout/item_pvp_liked" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_toolbar_height"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size"
            android:layout_marginEnd="@dimen/xm_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/back_top"
            android:text="@string/back_top"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_top"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="@dimen/fab_text_2"
            android:layout_height="@dimen/fab_size"
            android:layout_marginEnd="@dimen/xl_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/add"
            android:text="@string/add"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_add"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>