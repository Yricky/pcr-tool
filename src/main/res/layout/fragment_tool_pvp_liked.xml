<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    tools:context=".ui.tool.pvp.PvpLikedFragment">

    <include
        android:id="@+id/tool_pvp_like"
        layout="@layout/view_toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/like_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/m_margin"
        android:text="@string/no_liked_data"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/colorWhite" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_liked"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/xs_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/item_pvp_liked" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_toolbar_height"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size"
            android:layout_marginEnd="@dimen/xm_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/back_top"
            android:text="@string/back_top"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_top"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="@dimen/fab_text_2"
            android:layout_height="@dimen/fab_size"
            android:layout_marginEnd="@dimen/xl_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/add"
            android:text="@string/add"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fab_text_size"
            app:borderWidth="0dp"
            app:icon="@drawable/ic_add"
            app:iconSize="@dimen/menu_icon"
            app:iconTint="@color/colorPrimary" />

    </LinearLayout>


</LinearLayout>