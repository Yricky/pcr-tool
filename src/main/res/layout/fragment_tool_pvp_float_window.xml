<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxHeight="@dimen/float_window_height"
    android:orientation="horizontal"
    tools:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/move"
            android:src="@mipmap/ic_logo"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:tint="@color/colorPrimary" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/search"
            android:src="@drawable/ic_search"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:tint="@color/colorPrimary" />


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/float_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/float_card_radius"
        tools:layout_width="@dimen/float_window_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/xs_margin"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:maxWidth="@dimen/normal_icon"
                    android:maxHeight="@dimen/normal_icon"
                    tools:src="@drawable/unknow_gray" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:maxWidth="@dimen/normal_icon"
                    android:maxHeight="@dimen/normal_icon"
                    tools:src="@drawable/unknow_gray" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:maxWidth="@dimen/normal_icon"
                    android:maxHeight="@dimen/normal_icon"
                    tools:src="@drawable/unknow_gray" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:maxWidth="@dimen/normal_icon"
                    android:maxHeight="@dimen/normal_icon"
                    tools:src="@drawable/unknow_gray" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icon4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:maxWidth="@dimen/normal_icon"
                    android:maxHeight="@dimen/normal_icon"
                    tools:src="@drawable/unknow_gray" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tablayout_position"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tab_height_3"
                        app:tabInlineLabel="true"
                        app:tabMode="fixed">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pos_1" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pos_2" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pos_3" />

                    </com.google.android.material.tabs.TabLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/icons1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadeScrollbars="false"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="5"
                            tools:listitem="@layout/item_character_icon" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/icons2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadeScrollbars="false"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical"
                            android:visibility="invisible"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="5"
                            tools:listitem="@layout/item_character_icon" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/icons3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fadeScrollbars="false"
                            android:nestedScrollingEnabled="false"
                            android:scrollbars="vertical"
                            android:visibility="invisible"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            app:spanCount="5"
                            tools:listitem="@layout/item_character_icon" />
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/layout_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    tools:visibility="gone">

                    <include
                        android:id="@+id/result_content"
                        layout="@layout/fragment_tool_pvp_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/result_close"
                        style="@style/Ripple"
                        android:layout_width="@dimen/xl_icon"
                        android:layout_height="@dimen/xl_icon"
                        android:layout_margin="@dimen/s_margin"
                        android:src="@drawable/ic_back" />
                </FrameLayout>

            </FrameLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
