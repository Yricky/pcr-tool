<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/card_height"
    android:orientation="vertical"
    tools:context=".ui.tool.news.NewsDetailDialogFragment">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/progress_bar_size"
        android:layout_height="@dimen/progress_bar_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/xl_margin" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/l_margin"
        android:gravity="center"
        android:text="@string/news_load_tip"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/s_margin">

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/open_browse"
        android:layout_width="@dimen/menu_icon"
        android:layout_height="@dimen/menu_icon"
        android:layout_gravity="end"
        android:layout_margin="@dimen/s_margin"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_browser"
        android:theme="@style/Ripple" />
</FrameLayout>