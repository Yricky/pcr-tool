<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/elevation_card">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center"
            app:collapsedTitleTextAppearance="@style/CollapsedTitle"
            app:contentScrim="@color/colorWhite"
            app:expandedTitleTextAppearance="@style/ExpandedTitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@color/colorWhite"
            app:toolbarId="@id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/character_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax"
                tools:layout_height="200dp"
                tools:src="@drawable/error" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:menu="@menu/menu_basic_info"
                app:navigationIcon="@color/colorAlpha" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/content"
                layout="@layout/layout_basic_info" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/hr_height"
                android:layout_gravity="center"
                android:background="@color/colorBg" />

            <LinearLayout
                android:id="@+id/basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_margin"
                    android:padding="@dimen/s_padding"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

                <LinearLayout
                    android:id="@+id/line_ex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_last"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/limit"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/last_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="新春" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_birth"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/birth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/s_padding"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_blood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_blood"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/blood"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_race"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_race"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/race"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_cv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/cv"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_guide"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_favorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_fav"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/favorite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        tools:text="test" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/title_self"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/title_background"
                        android:paddingStart="@dimen/s_padding"
                        android:paddingEnd="0dp"
                        android:text="@string/title_self"
                        android:textAppearance="@style/subTitleWithe" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:gravity="end"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />


                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/m_margin"
                    android:gravity="start"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:text="test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_love_self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/s_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="@dimen/s_padding"
                    android:text="@string/love_rank_up"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/self" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/love_self_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/m_margin"
                    android:gravity="start"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    tools:text="test" />

                <include
                    layout="@layout/layout_character_promotion"
                    android:id="@+id/promotion" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_love_cbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:contentDescription="@string/tab_love"
        android:src="@drawable/ic_love"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:tint="@color/alphaPrimary" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>