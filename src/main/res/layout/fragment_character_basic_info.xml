<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBg">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@dimen/elevation_card">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="center"
            app:contentScrim="@color/colorWhite"
            app:expandedTitleGravity="center"
            app:expandedTitleTextAppearance="@style/ExpandedTitle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@color/colorWhite"
            app:toolbarId="@id/toolbar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/character_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                app:layout_collapseMode="parallax"
                tools:layout_height="@dimen/card_height"
                tools:src="null" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:layout_marginEnd="@dimen/m_margin"
                android:background="@android:color/transparent"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tool_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/l_margin"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/colorPrimary"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintEnd_toStartOf="@id/right_icon"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/right_icon"
                        android:layout_width="@dimen/fab_icon"
                        android:layout_height="@dimen/fab_icon"
                        android:layout_gravity="end"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter"
                        android:theme="@style/Ripple"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_love" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/m_padding">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/position_type"
                android:layout_width="@dimen/l_icon"
                android:layout_height="@dimen/l_icon"
                app:layout_constraintBottom_toBottomOf="@id/name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/name"
                tools:background="@drawable/ic_position_front" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constrainedWidth="true"
                app:layout_constraintStart_toEndOf="@id/position_type"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="莫妮卡" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/name"
                app:layout_constraintStart_toEndOf="@id/name"
                app:layout_constraintTop_toTopOf="@id/name"
                tools:text="莫妮卡" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="@dimen/s_padding"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name"
                tools:text="10 / 110 / 56" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/unit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
                android:textColor="@color/colorAlpha"
                android:textIsSelectable="true"
                app:layout_constraintBottom_toBottomOf="@id/three"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/three" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/three">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/catah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:layout_marginBottom="@dimen/s_margin"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="your best friend" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_margin"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textIsSelectable="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/catah"
                    tools:text="@string/app_name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xm_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_birth"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/intro"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/birth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="@dimen/s_padding"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/title_birth"
                    app:layout_constraintTop_toTopOf="@id/title_birth"
                    app:layout_constraintWidth_percent="0.35"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_blood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_blood"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toEndOf="@id/birth"
                    app:layout_constraintTop_toTopOf="@id/title_birth"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/blood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constraintStart_toEndOf="@id/title_blood"
                    app:layout_constraintTop_toTopOf="@id/title_birth"
                    app:layout_constraintWidth_percent="0.35"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_race"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_race"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_birth"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/race"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="@dimen/s_padding"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/title_race"
                    app:layout_constraintTop_toTopOf="@id/title_race"
                    app:layout_constraintWidth_percent="0.35"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/cv"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toEndOf="@id/race"
                    app:layout_constraintTop_toTopOf="@id/title_race"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constraintStart_toEndOf="@id/title_cv"
                    app:layout_constraintTop_toTopOf="@id/title_race"
                    app:layout_constraintWidth_percent="0.35"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_guide"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_race"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constraintStart_toEndOf="@id/title_guide"
                    app:layout_constraintTop_toTopOf="@id/title_guide"
                    app:layout_constraintWidth_percent="0.85"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_fav"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_guide"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toEndOf="@id/title_favorite"
                    app:layout_constraintTop_toTopOf="@id/title_favorite"
                    app:layout_constraintWidth_percent="0.85"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_self"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="0dp"
                    android:text="@string/title_self"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_favorite"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/self"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/s_padding"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_self"
                    tools:text="@string/test" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title_comments"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_margin"
                    android:background="@drawable/title_background"
                    android:paddingStart="@dimen/s_padding"
                    android:paddingEnd="@dimen/s_padding"
                    android:text="@string/title_comments"
                    android:textAppearance="@style/subTitleWithe"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/self"
                    app:layout_constraintWidth_percent="0.15" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/s_padding"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textIsSelectable="true"
                    app:layout_constraintTop_toBottomOf="@id/title_comments"
                    tools:text="@string/test" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_love_cbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        android:contentDescription="@string/tab_love"
        android:src="@drawable/ic_loved"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end"
        app:tint="@color/alphaPrimary" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>