<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAlpha">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/m_margin"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_ele">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/layout_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorGray"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleGravity="center"
                    app:collapsedTitleTextAppearance="@style/CollToolbar"
                    app:expandedTitleTextAppearance="@style/CollToolbar1"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:statusBarScrim="@color/colorGray"
                    app:contentScrim="@color/colorGray"
                    app:toolbarId="@id/toolbar">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/character_pic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:layout_collapseMode="parallax"
                        tools:layout_height="200dp" />

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbar_height"
                        android:background="@android:color/transparent"
                        app:contentInsetStartWithNavigation="0dp"
                        app:layout_collapseMode="pin"
                        app:menu="@menu/menu_basic_info"
                        app:navigationIcon="@drawable/ic_detail_back" />
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/m_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/catah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/m_margin"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="your best friend" />

                        <FrameLayout
                            android:id="@+id/icons"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/character_icon_size"
                            android:layout_marginTop="@dimen/l_margin"
                            app:layout_constraintEnd_toStartOf="@+id/layout_name"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/catah">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/icon1"
                                android:layout_width="@dimen/character_icon_size"
                                android:layout_height="@dimen/character_icon_size"
                                android:layout_gravity="center_vertical"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />
                        </FrameLayout>


                        <LinearLayout
                            android:id="@+id/layout_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@+id/icons"
                            app:layout_constraintTop_toBottomOf="@+id/catah"
                            app:layout_constraintTop_toTopOf="@id/icons">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/name"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="nnk" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toTopOf="@id/line1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintStart_toEndOf="@+id/icons"
                            app:layout_constraintTop_toBottomOf="@+id/layout_name">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/age"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="20" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line_ex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/s_margin"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/icons">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_last"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/limit"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/last_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="新春" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line_ex"
                            tools:layout_editor_absoluteX="6dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_height"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_height"
                                android:textAppearance="@style/subTitleWithe" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/s_padding">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/height"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                    tools:text="150 cm" />
                            </FrameLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_weight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_weight"
                                android:textAppearance="@style/subTitleWithe" />

                            <FrameLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/weight"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                    tools:text="50 kg" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line1">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_birth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_birth"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/birth"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:paddingStart="0dp"
                                android:paddingEnd="@dimen/s_padding"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="test" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_blood"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_blood"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/blood"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line2">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_race"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_race"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/race"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line3">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_guide"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_guide"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/guide"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line4">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_favorite"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_fav"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/favorite"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line5">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_cv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/cv"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/cv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="end"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                tools:text="test" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/line7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/line6">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_self"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_self"
                                android:textAppearance="@style/subTitleWithe" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:text=""
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/title_position"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/bg_title"
                                android:paddingStart="@dimen/s_padding"
                                android:paddingEnd="0dp"
                                android:text="@string/title_position"
                                android:textAppearance="@style/subTitleWithe" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/position"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/s_margin"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                                    tools:text="222" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/position_type"
                                    android:layout_width="@dimen/small_icon"
                                    android:layout_height="@dimen/small_icon"
                                    android:layout_gravity="center_vertical|end"
                                    tools:background="@drawable/position_0_300" />
                            </LinearLayout>
                        </LinearLayout>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/self"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/m_margin"
                            android:gravity="start"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintTop_toBottomOf="@id/line7"
                            tools:text="test" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/title_love_self"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_margin"
                            android:background="@drawable/bg_title"
                            android:paddingStart="@dimen/s_padding"
                            android:paddingEnd="@dimen/s_padding"
                            android:text="@string/love_rank_up"
                            android:textAppearance="@style/subTitleWithe"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/self" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/love_self_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/m_margin"
                            android:gravity="start"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/title_love_self"
                            tools:text="test" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/s_margin"
                        tools:listitem="@layout/item_card_bg" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/menu_item_share_plant"
                android:src="@drawable/ic_love_no_bg"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:layout_anchor="@id/app_bar"
                app:layout_anchorGravity="bottom|end"
                app:tint="@color/colorWhite" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>