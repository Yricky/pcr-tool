<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:defaultNavHost="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:navGraph="@navigation/nav_main" />

    <!--  fab-->
    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutDescription="@xml/motion_fab">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/setting"
            android:layout_width="@dimen/efa_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/setting"
            android:ellipsize="end"
            android:text="@string/setting"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:fabSize="mini"
            app:icon="@drawable/ic_settings"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/search"
            android:layout_width="@dimen/efa_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/search"
            android:text="@string/search"
            android:textColor="@color/colorPrimary"
            app:fabSize="mini"
            app:icon="@drawable/ic_search"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/filter"
            android:layout_width="@dimen/efa_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/filter"
            android:text="@string/filter"
            android:textColor="@color/colorPrimary"
            app:fabSize="mini"
            app:icon="@drawable/ic_filter"
            app:iconTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/m_margin"
            android:layout_marginBottom="@dimen/m_margin"
            android:backgroundTint="@color/colorWhite"
            android:contentDescription="@string/function"
            android:src="@drawable/ic_function"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/colorPrimary" />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
