<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/s_margin">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/atk_characters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s_margin"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:spanCount="5"
        tools:itemCount="5"
        tools:listitem="@layout/item_pvp_result_icon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_loved"
        android:tint="@color/textGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/atk_characters"
        app:layout_constraintTop_toBottomOf="@id/atk_characters" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xs_margin"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/s_padding"
        android:paddingEnd="@dimen/xs_padding"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/atk_characters"
        app:layout_constraintWidth_percent="0.25"
        tools:text="100%" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/s_padding"
        android:paddingEnd="@dimen/xs_padding"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/cool_apk"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/rate"
        app:layout_constraintTop_toTopOf="@id/rate"
        app:layout_constraintWidth_percent="0.25"
        tools:text="100" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/s_padding"
        android:paddingEnd="@dimen/xs_padding"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textColor="@color/red"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/up"
        app:layout_constraintTop_toTopOf="@id/rate"
        app:layout_constraintWidth_percent="0.35"
        tools:text="0" />

</androidx.constraintlayout.widget.ConstraintLayout>