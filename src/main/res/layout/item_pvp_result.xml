<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/atk_characters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/s_margin"
        android:layout_marginTop="@dimen/s_margin"
        android:layout_marginBottom="@dimen/s_margin"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:spanCount="5"
        tools:itemCount="5"
        tools:listitem="@layout/item_pvp_result_icon" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/s_padding"
        android:textColor="@color/colorPrimary"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@id/down"
        app:layout_constraintStart_toEndOf="@id/atk_characters"
        app:layout_constraintTop_toTopOf="@id/atk_characters"
        app:layout_constraintWidth_percent="0.2"
        tools:text="100" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/down"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:paddingStart="@dimen/s_padding"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@id/atk_characters"
        app:layout_constraintStart_toEndOf="@id/atk_characters"
        app:layout_constraintTop_toBottomOf="@id/up"
        app:layout_constraintWidth_percent="0.2"
        tools:text="10" />
</androidx.constraintlayout.widget.ConstraintLayout>