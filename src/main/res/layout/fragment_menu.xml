<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorAlpha"
    android:fitsSystemWindows="true"
    tools:background="@color/colorAlphtBlack">

    <include
        android:id="@+id/tool_pvp"
        layout="@layout/view_menu_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/card_height"
        android:layout_margin="@dimen/m_margin"
        app:layout_constraintEnd_toStartOf="@id/tool_news"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.45" />

    <include
        android:id="@+id/tool_news"
        layout="@layout/view_menu_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/small_card_height"
        android:layout_marginEnd="@dimen/m_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tool_pvp"
        app:layout_constraintWidth_percent="0.45" />

    <include
        android:id="@+id/tool_leader"
        layout="@layout/view_menu_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/small_card_height"
        android:layout_marginEnd="@dimen/m_margin"
        app:layout_constraintBottom_toBottomOf="@id/tool_pvp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45" />
</androidx.constraintlayout.widget.ConstraintLayout>
