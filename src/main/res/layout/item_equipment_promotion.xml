<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/s_margin">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_margin"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toEndOf="@id/item_pic"
        app:layout_constraintTop_toTopOf="@id/item_pic"
        tools:text="精灵树之弓" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_pic"
        android:layout_width="@dimen/xxxl_icon"
        android:layout_height="@dimen/xxxl_icon"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher_foreground" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star0"
        android:layout_width="@dimen/s_icon"
        android:layout_height="@dimen/s_icon"
        android:layout_margin="@dimen/s_margin"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toStartOf="@id/item_pic" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star1"
        android:layout_width="@dimen/s_icon"
        android:layout_height="@dimen/s_icon"
        android:layout_marginBottom="@dimen/s_margin"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toEndOf="@id/star0" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star2"
        android:layout_width="@dimen/s_icon"
        android:layout_height="@dimen/s_icon"
        android:layout_marginBottom="@dimen/s_margin"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toEndOf="@id/star1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star3"
        android:layout_width="@dimen/s_icon"
        android:layout_height="@dimen/s_icon"
        android:layout_marginBottom="@dimen/s_margin"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toEndOf="@id/star2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/star4"
        android:layout_width="@dimen/s_icon"
        android:layout_height="@dimen/s_icon"
        android:layout_marginBottom="@dimen/s_margin"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/item_pic"
        app:layout_constraintStart_toEndOf="@id/star3" />


</androidx.constraintlayout.widget.ConstraintLayout>