<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="@integer/item_anim">

    <scale
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="100%"
        android:pivotY="100%"
        android:toXScale="1"
        android:toYScale="1" />

    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />

    <translate
        android:fromXDelta="100%"
        android:fromYDelta="100%"
        android:toXDelta="0"
        android:toYDelta="0" />
</set>