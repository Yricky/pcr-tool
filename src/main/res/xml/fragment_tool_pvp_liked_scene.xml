<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/liked_start">
        <Constraint
            android:id="@+id/like_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tool_pvp_like" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/liked_end">
        <Constraint
            android:id="@id/like_tip"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            app:layout_constraintTop_toBottomOf="@id/tool_pvp_like" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/liked_end"
        app:constraintSetStart="@+id/liked_start">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/like_tip"
                android:alpha="1.0" />
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/like_tip"
                android:alpha="0.0" />
        </KeyFrameSet>
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/list_liked"
            app:touchAnchorSide="top" />
    </Transition>
</MotionScene>
