<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/leader_start">
        <Constraint
            android:id="@+id/leader_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_leader" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/leader_end">
        <Constraint
            android:id="@id/leader_desc"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tool_leader" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/leader_end"
        app:constraintSetStart="@+id/leader_start">
        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/leader_desc"
                android:alpha="1.0" />
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/leader_desc"
                android:alpha="0.0" />
        </KeyFrameSet>
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/leader_list"
            app:touchAnchorSide="top" />
    </Transition>
</MotionScene>
