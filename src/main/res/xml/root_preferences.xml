<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/screen">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="equip_is_list"
            app:summaryOff="@string/equip_off"
            app:summaryOn="@string/equip_on"
            app:title="@string/equip_list" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/data">

        <Preference
            app:iconSpaceReserved="false"
            app:key="force_update_db"
            app:summary="0"
            app:title="@string/update_db" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="auto_update_db"
            app:summaryOff="@string/off_auto_db"
            app:summaryOn="@string/on_auto_db"
            app:title="@string/auto_update_db" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            android:enabled="true"
            app:iconSpaceReserved="false"
            app:key="not_toast"
            app:summaryOff="@string/toast_on"
            app:summaryOn="@string/toast_off"
            app:title="@string/not_toast" />

    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="应用信息">

        <Preference
            app:iconSpaceReserved="false"
            app:key="force_update_app"
            app:summary="0.0.3-beta"
            app:title="@string/check_app_update" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="auto_update_app"
            app:summaryOff="@string/off_auto_app"
            app:summaryOn="@string/on_auto_app"
            app:title="@string/auto_update_app" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="clean_data"
            app:summary="@string/clean_cache_tip"
            app:title="@string/clean_cache" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/other">

        <Preference
            app:iconSpaceReserved="false"
            app:summary="wthee"
            app:title="@string/coolapk">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.coolapk.com/u/1975843" />
        </Preference>

        <Preference
            app:iconSpaceReserved="false"
            app:summary="https://github.com/wthee/pcr-tool"
            app:title="@string/app_sourcce">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/wthee/pcr-tool" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/thanks">

        <Preference
            app:iconSpaceReserved="false"
            app:summary="@string/data_from_hint"
            app:title="@string/data_from">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://redive.estertion.win/" />
        </Preference>

        <Preference
            app:iconSpaceReserved="false"
            app:summary="@string/dev_tip"
            app:title="@string/shizuru_note">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/MalitsPlus/ShizuruNotes" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="egg"
        app:iconSpaceReserved="false"
        app:title="@string/app_name">

        <Preference
            app:key="kl"
            app:icon="@drawable/ic_hide"
            app:summary="@string/egg_summary"
            app:title="@string/egg_text"></Preference>

    </PreferenceCategory>
</PreferenceScreen>