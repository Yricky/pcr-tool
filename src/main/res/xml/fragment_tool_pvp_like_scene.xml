<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/tool_pvp_liked_start">
        <Constraint
            android:id="@+id/fab_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size"
            android:layout_marginTop="@dimen/efab_margin"
            android:layout_marginEnd="@dimen/m_margin"
            android:layout_marginBottom="@dimen/efab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fab_add"
            app:layout_constraintTop_toBottomOf="@id/tool_list" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/tool_pvp_liked_end">
        <Constraint
            android:id="@+id/fab_top"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size"
            android:layout_marginTop="@dimen/efab_margin"
            android:layout_marginEnd="@dimen/m_margin"
            android:layout_marginBottom="@dimen/efab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fab_add"
            app:layout_constraintTop_toBottomOf="@id/tool_list" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/tool_pvp_liked_end"
        app:constraintSetStart="@+id/tool_pvp_liked_start">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.0"
                app:framePosition="0"
                app:motionTarget="@id/fab_top" />
            <KeyAttribute
                android:alpha="1.0"
                app:framePosition="100"
                app:motionTarget="@id/fab_top" />
        </KeyFrameSet>
        <OnSwipe
            app:dragDirection="dragDown"
            app:touchAnchorId="@id/tool_list"
            app:touchAnchorSide="top" />
    </Transition>
</MotionScene>
